{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "app",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "node/**/*",
    "clarity-js/**/*"
  ],
  "exclude": [
    "./node_modules/*",
    "client/**/*"
  ]
}